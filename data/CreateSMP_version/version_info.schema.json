{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Create-SMP Version Info",
  "type": "object",
  "properties": {
    "latestVersion": {
      "description": "the number of the latest Create-SMP modpack version",
      "type": "string"
    },
    "updateType": {
      "description": "if the update is needed or optional",
      "type": "string",
      "enum": [
        "needed",
        "optional"
      ]
    },
    "downloadUrl": {
      "description": "an URL where the latest version of the modpack can be downloaded",
      "type": "string",
      "pattern": "^https:\\/\\/((www\\.)?)mediafire\\.com\\/file\\/.+"
    },
    "changelog": {
      "description": "the changelog of the version",
      "type": "string"
    }
  },
  "required": [
    "latestVersion",
    "updateType",
    "downloadUrl",
    "changelog"
  ]
}